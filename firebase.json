{
  "functions": [
    {
      "source": "functions",
      "platform": "gcfv2",
      "runtime": "nodejs18",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "singleProjectMode": true,
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "auth": {
      "port": 9099
    },
    "hosting": {
      "port": 5002
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
